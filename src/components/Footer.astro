---
import Social from "./Social.astro";
---

<footer class="glass container lg:my-4 lg:rounded-lg intersect:animate-fadeUp opacity-0">
  <div class="row py-6 lg:py-8 items-center">
    <!-- Brand/Logo Section -->
    <div class="col-12 lg:col-4">
      <div class="text-center lg:text-left">
        <h3 class="text-lg font-semibold mb-2 text-black-800 dark:text-black-200">
          {import.meta.env.SITE_NAME}
        </h3>
        <p class="text-sm text-black-600 dark:text-black-400 max-w-xs mx-auto lg:mx-0">
         AI-powered social networking platform designed specifically for expats living in Japan.
        </p>
      </div>
    </div>

    <!-- Legal Links -->
    <div class="col-12 lg:col-4 mt-6 lg:mt-0">
      <div class="text-center">
        <h4 class="text-lg font-semibold mb-3 text-black-800 dark:text-black-200">Legal</h4>
        <ul class="space-y-2">
          <li>
            <a href="/terms-of-service" class="text-sm text-black-600 dark:text-black-400 hover:text-black-900 dark:hover:text-black-100 transition-colors duration-200">
              Terms of Service
            </a>
          </li>
          <li>
            <a href="/privacy-policy" class="text-sm text-black-600 dark:text-black-400 hover:text-black-900 dark:hover:text-black-100 transition-colors duration-200">
              Privacy Policy
            </a>
          </li>
          <li>
            <a href="/cookie-policy" class="text-sm text-black-600 dark:text-black-400 hover:text-black-900 dark:hover:text-black-100 transition-colors duration-200">
              Cookie Policy
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Social Media -->
    <div class="col-12 lg:col-4 mt-6 lg:mt-0">
      <div class="text-center lg:text-right">
        <h4 class="mb-3 text-lg font-semibold text-black-800 dark:text-black-200 place-self-center">Connect</h4>
        <div class="flex justify-center lg:justify-end">
          <Social
            links={{
              facebook: "https://www.facebook.com/",
              tiktok: "https://www.tiktok.com/",
              email: "info@rubito.jp",
              youtube:"https://www.youtube.com/",
              line:"https://www.line.jp/",
              website:"https://www.lacchinh.com/",
            }}
          />
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-black-200 dark:border-black-700 pt-4 pb-2">
    <div class="row items-center">
      <div class="col-12 text-center">
        <p class="text-xs text-black-500 dark:text-black-500">
          &copy; {new Date().getFullYear()} {import.meta.env.SITE_NAME}. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
